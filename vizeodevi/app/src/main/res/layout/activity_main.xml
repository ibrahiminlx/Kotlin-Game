<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_kolay"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="17dp"
        android:text="kolay mod"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_zor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_zor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:text="zor mod"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_kolay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_kolay"
        app:layout_constraintTop_toTopOf="@+id/button_kolay" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SkorRV"
        android:layout_width="407dp"
        android:layout_height="477dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>